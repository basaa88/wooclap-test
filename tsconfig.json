{
    "compileOnSave": false,
    "compilerOptions": {
      "declaration": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "lib": ["es2015", "es2016"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "noUnusedLocals": true,
      "noUnusedParameters": false,
      "outDir": "dist/",
      "skipLibCheck": true,
      "sourceMap": true,
      "strict": true,
      "target": "es5",
      "typeRoots": ["./node_modules/@types", "./app/@types"]
    },
    "exclude": ["lib/editor"]
  }